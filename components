mainPage
<template>
<div class="wrapper">    
  <div class="header">
      <div>Всего товаров доступно он-лайн: {{ products.length }} 
      <div>Вы выбрали {{ productsId.length }} товаров</div>
      <div>Общая стоимость {{ sum }} руб. </div> 
  </div>         
      <router-link to="cart">Перейти в корзину</router-link>
      <el-select v-model="products.category" placeholder="Выбрать категорию товара">
        <el-option
          v-for="item in category"
          :label="item.label"
          :value="item.value">
        </el-option>
      </el-select>
  </div> 
  <div class="content">   
    <div v-for="product in products">
      <div class="wrapper__wrapper-inner">
        <img :src="product.picture">
          {{product.name}} </br>
          {{product.price}} руб.</br>
          {{product.category}}</br>
          Рейтинг {{product.rating}}</br>
        <el-button type="success" @click="addToCart({id: product.id, obj: product})">Добавить в корзину</el-button>
      </div>
    </div>
  </div>
</div>
</template>

<script>
import {mapMutations} from 'vuex'

import {mapState} from 'vuex'
import Vue from 'vue'
import Vuex from 'vuex'
import axios from 'axios'
import { Button, Select } from 'element-ui';
Vue.use(Vuex);
Vue.use(Button)

export default {
  name: 'mainPage',
  
  created: function() {
      this.$store.dispatch('getProducts');     
  },
  methods: {
    ...mapMutations({
      addToCart:'add'
    })
   
  },
  computed:{
    ...mapState(['products', 'category','productsId', 'sum', 'category'])
  }
}

</script>
<style scoped>
body{
  display: flex;

}
