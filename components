cart
<template>
	<div class="wrapper">
		<div class="header">
			<div>В корзине {{ productsId.length }}</div>
			<div>Общая стоимость {{ sum }} руб.</div>
			<router-link to="/">На главную</router-link>
		</div>
		<div class="content">
		<div v-for="el in cart">
			<div class="wrapper__wrapper-inner">
				<img :src="el.picture">
				{{el.name}} </br>
        {{el.price}} руб.</br>
        Количество:{{ cnt }}
        <el-button type="success" @click="removeFromCart({id: el.id, obj: el})">Удалить из корзины</el-button>
      </div>
		</div>
	</div>
	</div>
</template>

<script>

import {mapMutations} from 'vuex'
import {mapState} from 'vuex'

export default{
	name: 'cart',
	computed:{
		cnt(){
			return{
			}
		},
		...mapState(['cnt','productsId', 'sum', 'cart'])
		},
	methods:{
			 ...mapMutations({
      removeFromCart:'remove'
    })
	}	
}

</script>

